doctype html
html(lang="en")
	include include/head.pug
	+head('Pelevita - About Us')

	body.about
		include ../blocks/mixins.pug

		+header({
			items: [
				{	
					url: 'catalog',
					name: 'CATALOG'
				},
				{
					url: 'card',
					name: 'TRACKING'
				},
				{
					url: 'contacts',
					name: 'CONTACTS'
				},
				{
					active: true,
					url: 'about-us',
					name: 'ABOUT US'
				}
			]
		})

		+pageNavigation({
			breadcrumbs: {
				items:[
					{
						url: '/',
						text: 'Main page'
					},
					{
						text: 'About Us'
					}
				]
			}
		})

